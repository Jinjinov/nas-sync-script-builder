    "version": "0.2.0",
    "configurations": [
        {
            "name": "File debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "__main__ debug",
            "type": "debugpy",
            "request": "launch",
            "module": "nas_sync_script_builder.__main__",
            "console": "integratedTerminal"
        },
        {
            "name": "CLI debug",
            "type": "debugpy",
            "request": "launch",
            "module": "nas_sync_script_builder.__main__",
            "console": "integratedTerminal",
            "args": ["--cli", "--detect"]
        }
    ]
}